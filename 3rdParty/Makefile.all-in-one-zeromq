# -*- mode: Makefile; -*-

################################################################################
## --SECTION--                                                           LIBRARY
################################################################################

################################################################################
### @brief ZeroMQ
################################################################################

BUILT_SOURCES += @ZEROMQ_LIBS@
ZMQDIR = @abs_top_srcdir@/3rdParty/zeromq-3.2.3/BUILD

@ZEROMQ_LIBS@: @srcdir@/.zeromq-build-@TRI_BITS@ 

@srcdir@/.zeromq-build-@TRI_BITS@:
	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILDING ZEROMQ"
	@echo "--------------------------------------------------------------------------------"
	@echo

	cd @top_srcdir@/3rdParty/zeromq-3.2.3 \
		&& ./configure \
			--disable-dependency-tracking \
			--disable-shared \
			--prefix=$(ZMQDIR) \
			--libdir=$(ZMQDIR)/lib@TRI_BITS@
	cd @top_srcdir@/3rdParty/zeromq-3.2.3 && $(MAKE) install

	touch @srcdir@/.zeromq-build-@TRI_BITS@

	@echo
	@echo "--------------------------------------------------------------------------------"
	@echo "BUILD ZeroMQ FINISHED"
	@echo "--------------------------------------------------------------------------------"
	@echo

################################################################################
## --SECTION--                                                       END-OF-FILE
################################################################################

## Local Variables:
## mode: outline-minor
## outline-regexp: "^\\(### @brief\\|## --SECTION--\\|# -\\*- \\)"
## End:
